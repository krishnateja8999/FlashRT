<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:unio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    >

    <include
        android:id="@+id/actionBar"
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/actionBar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonSync"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.8"
                android:background="@color/white"
                unio:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/buttonLista"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/main_button_height"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/listaText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|bottom"
                        android:text="@string/main_lista"
                        android:textColor="@color/bg"
                        android:textSize="48dp" />

                    <ImageView
                        android:id="@+id/listaIcon"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:src="@drawable/ic_filesdownload"

                        android:textColor="@android:color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/buttonContainer1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/main_button_height"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/buttonEntrega"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"


                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/delivary"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.8"
                        android:gravity="center_horizontal|center_vertical"
                        android:src="@drawable/ic_food_delivery"
                        android:textColor="@android:color/white"
                        android:textSize="49sp" />

                    <TextView
                        android:id="@+id/entregaText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.9"
                        android:gravity="center_horizontal"
                        android:text="@string/main_entrega"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonDevolucao"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"


                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/returnn"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.8"
                        android:gravity="center_horizontal|center_vertical"
                        android:src="@drawable/ic_delivery_man"
                        android:textColor="@android:color/white"
                        android:textSize="49sp" />

                    <TextView
                        android:id="@+id/devolucaoText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.9"
                        android:gravity="center_horizontal"
                        android:text="@string/main_devolucao"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/main_button_height"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:background="@color/white"
                        unio:cardCornerRadius="10dp">


                        <LinearLayout
                            android:id="@+id/buttonColeta"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"


                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/coletaIcon"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="8dp"
                                android:layout_weight="0.8"
                                android:gravity="center_horizontal|center_vertical"
                                android:src="@drawable/ic_motorbike"
                                android:textColor="@android:color/white"
                                android:textSize="49sp" />

                            <TextView
                                android:id="@+id/coletaText"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="15dp"
                                android:layout_weight="0.9"
                                android:gravity="center_horizontal"
                                android:text="@string/main_coleta"
                                android:textColor="@color/bg"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:background="@color/white"
                        unio:cardCornerRadius="10dp">

                        <LinearLayout
                            android:id="@+id/buttonPesquisa"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"


                            android:orientation="vertical">

                            <ImageView

                                android:id="@+id/pesquisaIcon"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_weight="0.8"
                                android:src="@drawable/ic_search_black_24dp"
                                android:textSize="49sp" />

                            <TextView
                                android:id="@+id/pesquisaText"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="15dp"
                                android:layout_weight="0.9"
                                android:gravity="center_horizontal"
                                android:text="@string/main_pesquisa"
                                android:textColor="@color/bg"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/sync_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.8"
                android:background="@color/white"
                unio:cardCornerRadius="10dp">

                <LinearLayout

                    android:id="@+id/sync"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:gravity="center_horizontal|bottom"
                        android:text="Sincronizar dados"
                        android:textColor="@color/bg"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_sync"
                        android:textColor="@android:color/white"
                        android:textSize="70sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <ImageView

            android:id="@+id/buttonSync"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"


            android:minWidth="50dp"

            android:minHeight="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_message_24"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/copyright_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_copyright_version"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="3.8.1"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/beta"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>