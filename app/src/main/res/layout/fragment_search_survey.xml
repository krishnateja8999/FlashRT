<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:unio="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Fragments.SearchSurvey">

    <TextView
        android:id="@+id/researchHawb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Pesquisa: 00000000000"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/bl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/researchHawb"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:alpha="0.8"
                    unio:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/client_local"
                    android:background="@color/white">

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/actions_lay1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cliente localizado" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="0.8"
                                android:gravity="left">

                                <RadioGroup
                                    android:layout_width="0dp"
                                    android:layout_weight="0.8"
                                    android:layout_height="wrap_content"
                                    android:weightSum="0.8"
                                    android:orientation="horizontal"
                                    android:id="@+id/radioGroup">

                                    <RadioButton
                                        android:id="@+id/radio1"
                                        android:buttonTint="@color/bg"
                                        android:backgroundTint="@color/bg"
                                        android:layout_marginLeft="15dp"
                                        android:layout_gravity="left"
                                        android:gravity="center"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.4"
                                        android:layout_height="wrap_content"
                                        android:text="Sim" />

                                    <RadioButton
                                        android:id="@+id/radio2"
                                        android:buttonTint="@color/bg"
                                        android:backgroundTint="@color/bg"
                                        android:layout_marginLeft="15dp"
                                        android:layout_gravity="left"
                                        android:gravity="center"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.4"
                                        android:layout_height="wrap_content"
                                        android:text="Não" />
                                </RadioGroup>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:alpha="0.8"
                    unio:cardCornerRadius="10dp"
                    android:visibility="gone"
                    android:id="@+id/client_alberto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/actions_lay2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cliente aberto à pesquisa" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="0.8"
                                android:gravity="left">

                                <RadioGroup
                                    android:layout_width="0dp"
                                    android:layout_weight="0.8"
                                    android:layout_height="wrap_content"
                                    android:weightSum="0.8"
                                    android:orientation="horizontal"
                                    android:id="@+id/radioGroup1">

                                    <RadioButton
                                        android:id="@+id/radio3"
                                        android:buttonTint="@color/bg"
                                        android:backgroundTint="@color/bg"
                                        android:layout_marginLeft="15dp"
                                        android:layout_gravity="left"
                                        android:gravity="center"

                                        android:layout_width="0dp"
                                        android:layout_weight="0.4"
                                        android:layout_height="wrap_content"
                                        android:text="Sim" />

                                    <RadioButton
                                        android:id="@+id/radio4"
                                        android:buttonTint="@color/bg"
                                        android:backgroundTint="@color/bg"
                                        android:layout_marginLeft="15dp"
                                        android:layout_gravity="left"
                                        android:gravity="center"

                                        android:layout_width="0dp"
                                        android:layout_weight="0.4"
                                        android:layout_height="wrap_content"
                                        android:text="Não" />
                                </RadioGroup>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/button_abrir"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:text="Abrir pesquisa"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_blue_button"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center" />

                <androidx.cardview.widget.CardView
                    android:alpha="0.8"
                    unio:cardCornerRadius="10dp"
                    android:id="@+id/lastCardView"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Spinner
                            android:layout_marginTop="15dp"
                            android:id="@+id/spi"
                            android:layout_width="match_parent"
                            android:background="@android:drawable/btn_dropdown"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" />

                        <Spinner
                            android:layout_marginTop="15dp"
                            android:id="@+id/spi2"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:background="@android:drawable/btn_dropdown"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" />

                        <Button

                            android:id="@+id/takePic"
                            android:visibility="visible"
                            android:layout_marginTop="15dp"
                            android:text="Tirar foto do local"
                            android:textAllCaps="false"
                            android:background="@drawable/rounded_blue_button"
                            android:textColor="@color/white"
                            android:layout_width="150dp"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/confirm_enviar"
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:text="Enviar Respostas"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_blue_button"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <com.stepstone.stepper.StepperLayout
        android:layout_below="@+id/researchHawb"
        android:visibility="gone"
        android:id="@+id/stepperLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:ms_bottomNavigationBackground="@drawable/stepper_bg"
        app:ms_backButtonBackground="@drawable/stepper_back_bg"
        app:ms_completeButtonBackground="@drawable/stepper_complete_bg"
        app:ms_nextButtonBackground="@drawable/stepper_next_bg"
        app:ms_completeButtonColor="@color/white"
        app:ms_backButtonColor="@color/white"
        app:ms_stepperType="tabs" />


</RelativeLayout>